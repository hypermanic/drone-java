
import java.util.ArrayList;
import java.util.List;

public class DroneUtil {
	private List<Drone> droneList=new ArrayList<>();
	public void addDrone(String input)
	{
		String[] arr=input.split(":");
		String id=arr[0];
		String name=arr[1];
		String type=arr[2];
		double speed=Double.parseDouble(arr[3]);
		Drone drone=new Drone(id,name,type,speed);
		droneList.add(drone);
		
	}
	public Drone getDroneById(String droneId)
	{
		for(Drone d:droneList) {
			if(d.getDroneId().equals(droneId))
			{
				return d;
			}
		} 
		return null;
	}
	public List<Drone> getFastestDrone()
	{
		List<Drone> fastestList=new ArrayList<>();
		 double minSpeed = droneList.get(0).getSpeed();

		    
		    for (Drone d : droneList) {
		        if (d.getSpeed() < minSpeed) {
		            minSpeed = d.getSpeed();
		        }
		    }

		    
		    for (Drone d : droneList) {
		        if (d.getSpeed() == minSpeed) {
		            fastestList.add(d);
		        }
		    }
		    return fastestList;
		
	}

}


import java.util.List;
import java.util.Scanner;

public class UserInterface {
	public static void main(String[] args) {
		Scanner sc=new Scanner(System.in);
		DroneUtil util=new DroneUtil();
		System.out.println("Enter the no of Strings");
		int n=sc.nextInt();
		sc.nextLine(); 
		System.out.println("Enter Details");
		for(int i=0;i<n;i++)
		{
			String details=sc.nextLine();
			util.addDrone(details);
			
		}
		System.out.println("Search by Id");
		String droneId=sc.nextLine();
		Drone found=util.getDroneById(droneId);
		if(found!=null)
		{
			System.out.println(found.getDroneId()+" | "+found.getDroneName()+" | "+found.getDroneType()+" | "+found.getSpeed()+" minutes");
		}
		else
		{
			System.out.println("Drone not Found");
		}
		System.out.println("Show Fastest Drones");
		List<Drone> fastestList = util.getFastestDrone();

        for (Drone d : fastestList) {
            System.out.println(d.getDroneId() + " | " + d.getDroneName() + " | "
                    + d.getDroneType() + " | " + d.getSpeed());
        }

        
		
	}

}
